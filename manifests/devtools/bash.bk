#
class moduledev::devtools::bash {
  file {'first_run':
    ensure => 'file',
    source => 'puppet:///modules/MiamiOH-moduledev/templates/first_run.sh',
    path   => '~/first_run.sh',
    owner  => 'root',
    group  => 'root',
    mode   => '0744',
    notify => Exec['run_script'],
  }
  exec {'run_script':
    command     => '~/firstrun.sh',
    refreshonly => true,
  }

}
